{
  "scopeName": "source.embedded.json-injection",
  "patterns": [
    {
      "name": "meta.embedded.block.ts",
      "begin": "\\{ts:",
      "beginCaptures": {
        "0": { "name": "punctuation.section.embedded.begin.ts" }
      },
      "end": "\\s*:\\}",
      "endCaptures": {
        "0": { "name": "punctuation.section.embedded.end.ts" }
      },
      "contentName": "ts.embedded",
      "patterns": [
        {
          "include": "source.ts"
        }
      ]
    },
    {
      "name": "meta.embedded.inline.ts",
      "match": "(\"::)(.*?)(\")",
      "captures": {
        "1": { "name": "punctuation.section.embedded.begin.ts comment" },
        "2": { "name": "ts.embedded", "patterns": [{ "include": "source.ts" }] },
        "3": { "name": "punctuation.section.embedded.end.ts comment" }
      }
    }
  ]
}
